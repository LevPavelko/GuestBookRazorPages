@page
@model GuestBookRazorPages.Pages.GuestBook.registerModel
<h1>Registration</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="register.FirstName" class="control-label"></label>
                <input asp-for="register.FirstName" class="form-control" />
                <span asp-validation-for="register.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="register.LastName" class="control-label"></label>
                <input asp-for="register.LastName" class="form-control" />
                <span asp-validation-for="register.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="register.Login" class="control-label"></label>
                <input asp-for="register.Login" class="form-control" />
                <span asp-validation-for="register.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="register.Password" class="control-label"></label>
                <input asp-for="register.Password" class="form-control" />
                <span asp-validation-for="register.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="register.PasswordConfirm" class="control-label"></label>
                <input asp-for="register.PasswordConfirm" class="form-control" />
                <span asp-validation-for="register.PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Check in" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
